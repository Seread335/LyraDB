{
  "project": {
    "name": "LyraDB",
    "description": "High-performance distributed SQL database system with file-based persistence",
    "version": "1.0.0",
    "created": "2025-12-13",
    "status": "Production Ready",
    "language": "C++"
  },
  "features": {
    "core": [
      "SQL query execution engine",
      "Vectorized query processing",
      "Compression support (RLE, Delta, Dictionary, ZStandard)",
      "Index optimization",
      "Buffer management",
      "Storage management"
    ],
    "persistence": [
      "Binary .db file format",
      "Magic number: LYDB (0x4C594244)",
      "Version-aware format",
      "Cross-platform compatibility",
      "Automatic compression"
    ],
    "capabilities": [
      "CREATE TABLE",
      "INSERT VALUES",
      "SELECT queries",
      "WHERE clauses",
      "Data aggregation",
      "Backup & restore",
      "File-based persistence"
    ]
  },
  "structure": {
    "directories": [
      {
        "name": "src",
        "description": "Source code",
        "subdirs": ["bindings", "buffer", "core", "execution", "indexes", "query", "server", "storage"]
      },
      {
        "name": "include",
        "description": "Header files",
        "subdirs": ["lyradb"]
      },
      {
        "name": "examples",
        "description": "Example implementations",
        "files": ["database_file_example.cpp", "db_file_simple.cpp", "test_db_file_format.cpp", "simple.c", "music_test.c", "dml_test.c"]
      },
      {
        "name": "tests",
        "description": "Unit tests"
      },
      {
        "name": "benchmarks",
        "description": "Performance benchmarks"
      },
      {
        "name": "docs",
        "description": "Documentation"
      }
    ]
  },
  "build": {
    "system": "CMake 3.10+",
    "scripts": ["build_windows.bat", "build_windows.sh", "build_linux.sh", "build_macos.sh", "build_all.sh"],
    "compilers": ["MSVC", "GCC", "Clang"],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "api": {
    "main_class": "DatabaseFile",
    "methods": [
      {
        "name": "constructor",
        "signature": "DatabaseFile(filepath)",
        "description": "Create or open database file"
      },
      {
        "name": "execute",
        "signature": "execute(sql)",
        "description": "Execute SQL statements"
      },
      {
        "name": "save",
        "signature": "save()",
        "description": "Save database to file"
      },
      {
        "name": "backup",
        "signature": "backup(path)",
        "description": "Create backup copy"
      },
      {
        "name": "compact",
        "signature": "compact()",
        "description": "Optimize file size"
      },
      {
        "name": "open",
        "signature": "DatabaseFile::open(filepath)",
        "description": "Open existing .db file"
      }
    ]
  },
  "file_format": {
    "name": "LyraDB Binary Format",
    "extension": ".db",
    "header": {
      "magic": "LYDB",
      "magic_hex": "0x4C594244",
      "version": 1,
      "timestamp": "Unix timestamp",
      "size": "Data size in bytes"
    },
    "data_section": {
      "compression": ["RLE", "Delta", "Dictionary", "ZStandard"],
      "content": ["Table schemas", "Row data", "Indexes"]
    },
    "header_size": "24 bytes"
  },
  "statistics": {
    "total_files": 47,
    "source_files": 25,
    "header_files": 12,
    "test_files": 8,
    "example_files": 6,
    "lines_of_code": 15000,
    "supported_sql_operations": [
      "CREATE TABLE",
      "DROP TABLE",
      "INSERT INTO",
      "SELECT",
      "UPDATE",
      "DELETE",
      "WHERE",
      "ORDER BY",
      "GROUP BY"
    ]
  },
  "dependencies": {
    "external": [
      "C++17 Standard Library",
      "CMake (build tool)",
      "zstd (compression)"
    ],
    "optional": [
      "GoogleTest (testing)",
      "benchmark library (benchmarking)"
    ]
  },
  "usage": {
    "basic_example": {
      "step1": "Create database: DatabaseFile db(\"mydata.db\")",
      "step2": "Create table: db.execute(\"CREATE TABLE users (id INT32, name STRING)\")",
      "step3": "Insert data: db.execute(\"INSERT INTO users VALUES (1, 'John')\")",
      "step4": "Query data: auto result = db.execute(\"SELECT * FROM users\")",
      "step5": "Save: db.save()"
    }
  },
